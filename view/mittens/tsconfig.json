{
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "@lynx-js/react",

    "module": "node18",
    "moduleResolution": "node16",
    "allowImportingTsExtensions": true,
    "noEmit": true,

    "strict": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/"]
}